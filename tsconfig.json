{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "vite.config.*"],
  "compilerOptions": {
    "lib": ["es2017"],
    "ignoreDeprecations": "5.0",
    "noImplicitAny": false,
    "strict": false,
    "skipLibCheck": true,
    "verbatimModuleSyntax": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
